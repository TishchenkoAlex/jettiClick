{
    "Tax": {
        "type": "number",
        "readOnly": "true"
    },
    "Items": {
        "type": "table",
        "Items": {
            "Qty": {
                "type": "number",
                "totals": 4,
                "order": 2,
                "required": true,
                "change": "return { Amount: doc.Price * (value || 0)}"
            },
            "SKU": {
                "type": "Catalog.Product",
                "order": 1,
                "required": true
            },
            "Price": {
                "type": "number",
                "required": true,
                "order": 3,
                "change": "return { Amount: doc.Qty * (value || 0)}"
            },
            "Amount": {
                "type": "number",
                "required": true,
                "order": 4,
                "totals": 5,
                "change": "return { Price: doc.Qty ? value / doc.Qty : 0}"
            }
        },
        "label": "Ordered items",
        "change": "let Amount=0, Tax=0; for(const f of value) { Amount += f.Amount || 0; Tax += f.Amount * 0.2 }; return { Amount: Amount, Tax: Tax }"
    },
    "Amount": {
        "type": "number",
        "readOnly": "true"
    },
    "Status": {
        "order": "8",
        "style": { "width": "110px" }
    },
    "Manager": {
        "type": "Catalog.Manager",
        "order": "7",
        "style": { "width": "160px" }
    },
    "Customer": {
        "type": "Catalog.Counterpartie",
        "order": "6"
    }
}